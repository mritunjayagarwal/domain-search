<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Domains</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/sidebar.css">
</head>

<body>
    <nav class="mnb navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="ic fa fa-bars"></i>
                </button>
                <!-- <div style="padding: 15px;">
                    <a href="#" id="msbo"><i class="ic fa fa-bars"></i></a>
                </div> -->
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">En</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                            aria-expanded="false"><%= user.username %><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/">Logout</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </div>
        </div>
    </nav>
    <!--msb: main sidebar-->
    <div class="msb" id="msb">
        <nav class="navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <div class="brand-wrapper">
                    <!-- Brand -->
                    <div class="brand-name-wrapper">
                        <a class="navbar-brand" href="/">
                            Web Domain Service
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Menu -->
            <div class="side-menu-container">
                <ul class="nav navbar-nav">

                    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active"><a href="/domains/list"><i class="fa fa-puzzle-piece"></i> Dashboard</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </div>
    <!--main content wrapper-->
    <div class="mcw">
        <!--navigation here-->
        <!--main content view-->
        <div class="cv">
            <div class="container">
                <h1>Welcome, <%= user.username %></h1>
                <div class="wrapper">
                    <ul class="tabs clearfix" data-tabgroup="first-tab-group">
                        <li><a href="#tab1" class="active">Overview</a></li>
                        <li><a href="#tab2">DNS Settings</a></li>
                    </ul>
                    <section id="first-tab-group" class="tabgroup">
                        <div id="tab1">
                            <h1>Domain Details</h1>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <table class="table table-bordered">
                                                <tbody>
                                                  <tr>
                                                    <th scope="row">Domain Name</th>
                                                    <td><%= domain.$.DomainName %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Expires on</th>
                                                    <td><%= domain.DomainDetails[0].ExpiredDate[0] %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Purchased on</th>
                                                    <td><%= domain.DomainDetails[0].CreatedDate[0] %></td>
                                                  </tr>
                                                </tbody>
                                              </table>
                                        </div>
                                        <div class="col-lg-6">
                                            <table class="table table-bordered">
                                                <tbody>
                                                  <tr>
                                                    <th scope="row">Is Premium Domain</th>
                                                    <td>No</td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Who Is Guard</th>
                                                    <td>Not Enabled</td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Auto Renew</th>
                                                    <td>Not Enabled</td>
                                                  </tr>
                                                </tbody>
                                              </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h1>Contact Details</h1>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <table class="table table-bordered">
                                                <tbody>
                                                  <tr>
                                                    <th scope="row">Owned By</th>
                                                    <td><%= user.fname %>  <%= user.lname %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Registered Email Address</th>
                                                    <td><%= user.email %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Registered Phone Number</th>
                                                    <td><%= user.phone %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Organisation Name</th>
                                                    <td><%= user.organisation %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Street Address</th>
                                                    <td><%= user.address %></td>
                                                  </tr>
                                                </tbody>
                                              </table>
                                        </div>
                                        <div class="col-lg-6">
                                            <table class="table table-bordered">
                                                <tbody>
                                                  <tr>
                                                    <th scope="row">Billing Country</th>
                                                    <td><%= user.country %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Billing State/Province</th>
                                                    <td><%= user.state %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Billing City</th>
                                                    <td><%= user.city %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Zip</th>
                                                    <td><%= user.zip %></td>
                                                  </tr>
                                                  <tr>
                                                    <th scope="row">Billing Method</th>
                                                    <td>Wallet Transfer</td>
                                                  </tr>
                                                </tbody>
                                              </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab2">
                            <form method = "POST" action = "/domain/custom/dns">
                                <input type="text" name = "domainName" value = "<%= domain.$.DomainName %>" hidden>
                                <% domain.DnsDetails[0].Nameserver.forEach((nameserver, index)=> { %>
                                    <input type="text" name = "nameserver<%= index + 1 %>" value = "<%= nameserver %>">
                                <% }) %>
                                <button>Change Name Servers</button>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js" charset="utf-8"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>